<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="15dp" />
            <size
                android:width="75dp"
                android:height="25dp" />
            <solid
                android:color="#c6c6c7"
                />
        </shape>
    </item>
    <item  android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="15dp" />
            <gradient
                android:startColor="#0155a6"
                android:centerColor="#1abafb"
                android:endColor="#0155a6"
                android:type="linear"
                android:angle="90"/>
        </shape>
    </item>
</layer-list>